<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_not_detay_gorme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="firma.bookapp.KitapDetayGorme"
    tools:showIn="@layout/activity_kitap_detay_gorme"
    android:layout_gravity="center_vertical"
    android:background="#E2E3E8">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp"
        android:id="@+id/card_view1"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:background="@drawable/book"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Book name :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_weight="0.08"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Başlık"
                        android:id="@+id/adi"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/image"
                        android:textColor="#e64d4d"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Category :"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_weight="0.03"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/cardview_dark_background"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Açıklama"
                        android:id="@+id/adresad"
                        android:layout_toRightOf="@+id/image"
                        android:textColor="@color/colorPrimaryDark"
                        android:maxLines="1"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignBottom="@+id/image"
                        android:padding="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Number of pages :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_weight="0.13"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/sayfasayisi"
                        android:layout_centerVertical="true"
                        android:textColor="#5bf963"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Price :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:padding="10dp"
                        android:layout_weight="0.11"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Deger"
                        android:id="@+id/deger"
                        android:layout_toRightOf="@+id/image"
                        android:textColor="@android:color/holo_orange_dark"
                        android:maxLines="1"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignBottom="@+id/image"
                        android:padding="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sepet"
                    android:id="@+id/shop" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
