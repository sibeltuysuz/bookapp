<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/content_kitap__ekle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="firma.bookapp.Kitap_Ekle"
    tools:showIn="@layout/activity_kitap__ekle">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp"
        android:id="@+id/card_view1"
        android:layout_margin="5dp"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                app:srcCompat="@drawable/book"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/adi"
        android:hint="Book name" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/kategori"
                android:layout_marginTop="13dp"
                android:id="@+id/adresad">
            </Spinner>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/adresad"
        android:layout_centerHorizontal="true"
        android:id="@+id/sayfa"
        android:hint="Number of pages"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/sayfa"
        android:layout_centerHorizontal="true"
        android:id="@+id/deger"
        android:hint="Price"
        android:layout_marginTop="10dp" />

    <Button
        android:text="SAVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/kaydet"
        android:background="#01A4FF"
        android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
